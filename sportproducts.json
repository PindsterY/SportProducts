{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Sport products",
        "description": "List out different sport product from different sports",
        "termsOfService": "http://www.pind.ee",
        "contact": {
            "name": "Rasmus Pind",
            "email": "rasmus.pind@khk.ee",
            "url": "pind.ee"
        },
        "license": {
            "name": "Microsoft",
            "url": "http://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:8080/Swagger",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/sportproducts": {
            "get": {
                "description": "Returns all sport products from the system that the user has access to",
                "operationId": "findSportproducts",
                "produces": [
                    "application/json",
                    "application/xml",
                    "text/xml",
                    "text/html"
                ],
                "parameters": [
                    {
                        "name": "sportproductNames",
                        "in": "query",
                        "description": "sport product names to filter by",
                        "required": false,
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "collectionFormat": "csv"
                    },
                    {
                        "name": "sport",
                        "in": "query",
                        "description": "Sport to filter by",
                        "required": false,
                        "type": "string",
                        "format": "csv"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "sportproduct response",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/sportproduct"
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            },
            "post": {
                "description": "Creates a new sport product.  Duplicates are allowed",
                "operationId": "addSportproduct",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "sportproduct",
                        "in": "body",
                        "description": "Sport product to add",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/newSportproduct"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "sportproduct response",
                        "schema": {
                            "$ref": "#/definitions/sportproduct"
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "sportproduct"
                ],
                "summary": "Update an existing sport product",
                "description": "",
                "operationId": "updateSportproduct",
                "consumes": [
                    "application/json",
                    "application/xml"
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "sportproduct",
                        "description": "Sport product object that needs to be added",
                        "required": false,
                        "schema": {
                            "$ref": "#/definitions/sportproduct"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sport product updated successfully"
                    },
                    "400": {
                        "description": "Invalid ID supplied"
                    },
                    "404": {
                        "description": "Sport product not found"
                    },
                    "405": {
                        "description": "Validation exception"
                    }
                }
            }
        },
        "/sportproducts/{id}": {
            "get": {
                "description": "Returns a user based on a single ID, if the user does not have access to the sport products",
                "operationId": "findSportproductById",
                "produces": [
                    "application/json",
                    "application/xml",
                    "text/xml",
                    "text/html"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of sport product to fetch",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Requested sport product JSON",
                        "schema": {
                            "$ref": "#/definitions/sportproduct"
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            },
            "delete": {
                "description": "deletes a single sport product based on the ID supplied",
                "operationId": "deleteSportproduct",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of sport product to delete",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Sport product is deleted"
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "sportproduct": {
            "type": "object",
            "required": [
                "id",
                "name"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "sport": {
                    "type": "string"
                },
                "releaseYear": {
                    "type": "integer"
                }
            }
        },
        "newSportproduct": {
            "type": "object",
            "required": [
                "name",
                "description",
                "sport",
                "releaseYear"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "sport": {
                    "type": "string"
                },
                "releaseYear": {
                    "type": "integer"
                }
            }
        },
        "errorModel": {
            "type": "object",
            "required": [
                "code",
                "message"
            ],
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}
